<view class="container">
  <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="{{scale}}" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%; height: 100%;">
  <cover-view class="controls">
    <cover-image bindload="imageLoad" class='btnMain btnYard' bindtap='goMap' src='{{images.btnYard}}'></cover-image>
    <cover-image bindload="imageLoad" class='btnMain btnHouse' bindtap='goHome' src='{{images.btnHouse}}'></cover-image>
    <cover-image bindload="imageLoad" class='btnMain btnShop' bindtap='goShop' src='{{images.btnShop}}'></cover-image>
  </cover-view>
  </map>
</view>